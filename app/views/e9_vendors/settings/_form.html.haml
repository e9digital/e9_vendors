= form_for resource, :url => e9_vendors_settings_path  do |f|
  .errors= resource_error_messages!

  %fieldset#widget_settings
    %legend 
      = help_label(:widget_settings, :e9_vendors_widget_settings, :key => :e9_vendors_widget_help)
    .field
      = f.label :e9_vendors_widget_title
      = f.text_field :e9_vendors_widget_title
    .field
      = f.label :e9_vendors_widget_form_title
      = f.text_field :e9_vendors_widget_form_title
    .field
      = f.label :e9_vendors_widget_form_text
      = f.text_area :e9_vendors_widget_form_text
    - if e9_user?
      .field
        = f.label :e9_vendors_logo_size, nil, :class => :req
        = f.text_field :e9_vendors_logo_size
  .actions
    = f.submit
